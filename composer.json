{
    "name": "nschmid/laravel-langman",
    "description": "Manage language files with ease.",
    "keywords": ["laravel", "localization", "multilingual"],
    "homepage": "https://github.com/nschmid/laravel-langman",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohamed Said",
            "email": "theMohamedSaid@gmail.com",
            "homepage": "https://themsaid.github.io"
        },
        {
            "name": "Nicolas Schmid",
            "email": "nicolas.m.schmid@gmail.com"
        }
    ],
    "require": {
        "php" : "^8.2",
        "illuminate/support" : "^10.0",
        "illuminate/console": "^10.0",
        "illuminate/filesystem": "^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "8.*",
        "mockery/mockery": "1.*"
    },
    "autoload": {
        "psr-4": {
            "Themsaid\\Langman\\": "src"
        },
        "classmap": [
            "tests"
        ]
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Themsaid\\Langman\\LangmanServiceProvider"
            ]
        }
    }
